  int buttonState = param.asInt(); // Get button state
  if (buttonState == 1) {
    digitalWrite(RELAY_PIN, HIGH); // Turn on solenoid valve
  } else {
    digitalWrite(RELAY_PIN, LOW); // Turn off solenoid valve
  }
}
